<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:showIn="@layout/activity_record_media">

    <TextView
        tools:visibility="visible"
        android:visibility="invisible"
        android:id="@+id/tvVideoHint"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/show_record_toast"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/press_to_record"
        android:textColor="#fff"
        android:textSize="14sp" />

    <View
        android:layout_marginBottom="3dp"
        android:id="@+id/redDot"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/red_dot_shape" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_center"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="拍照"
        android:textColor="#fff"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:id="@+id/ll_slide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/tv_camera"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="拍照"
            android:textColor="@color/colore93a3a"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:gravity="center_horizontal"
            android:id="@+id/tv_record"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="摄像"
            android:textColor="#fff"
            android:textSize="@dimen/sp_13" />
    </LinearLayout>
</LinearLayout>